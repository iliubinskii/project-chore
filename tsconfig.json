{
  "extends": "./tsconfig/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "cache/typescript",
    "paths": {
      "@": [
        "src"
      ],
      "@/*": [
        "src/*"
      ]
    },
    "types": [
      "jest"
    ]
  },
  "exclude": [
    "cache",
    "coverage",
    "dist",
    "docs",
    "es",
    "node_modules"
  ],
  "include": [
    "*.js",
    "*.ts",
    ".eslintrc.js",
    ".eslintrc.overrides.js",
    ".eslintrc.rule-overrides.js",
    ".eslintrc.synonyms.js",
    ".eslintrc.temp.js",
    ".postcssrc.js",
    ".prettierrc.js",
    ".stylelintrc.js",
    ".stylelintrc-html.js",
    "api/**/*.js",
    "api/**/*.ts",
    "api/**/*.tsx",
    "api/**/*.vue",
    "bin/**/*.js",
    "bin/**/*.ts",
    "bin/**/*.tsx",
    "bin/**/*.vue",
    "commitlint/**/*.js",
    "commitlint/**/*.ts",
    "commitlint/**/*.tsx",
    "commitlint/**/*.vue",
    "eslint/**/*.js",
    "eslint/**/*.ts",
    "eslint/**/*.tsx",
    "eslint/**/*.vue",
    "jest/**/*.js",
    "jest/**/*.ts",
    "jest/**/*.tsx",
    "jest/**/*.vue",
    "src/**/*.js",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "stylelint/**/*.js",
    "stylelint/**/*.ts",
    "stylelint/**/*.tsx",
    "stylelint/**/*.vue",
    "tests/**/*.js",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "tests/**/*.vue"
  ]
}
